## Configuration file for CAVA.
# Remove the ; to change parameters.

[general]
# Framerate for the visualizer
framerate = 60

# Automatically sens the sensitivity if the audio input is too low
autosens = 1

# Sensitivity in percent
sensitivity = 100

# Number of bars (0-512)
bars = 0

# Bar width
bar_width = 2

# Bar spacing
bar_spacing = 1

# Lower and higher cutoff frequencies for the visualizer
lower_cutoff_freq = 50
higher_cutoff_freq = 10000

[input]
# Audio capturing method
method = pulse

# Use default audio source
source = auto

[output]
# Output method
method = ncurses

# Visual channels
channels = stereo

# Raw output target
raw_target = /dev/stdout

# Data format
data_format = binary

# Bit format
bit_format = 16bit

# ASCII max value
ascii_max_range = 1000

# Bar delimiter for ASCII
bar_delimiter = 59

# Frame delimiter for ASCII
frame_delimiter = 10

[color]
# Colors can be one of seven predefined: black, blue, cyan, green, magenta, red, white, yellow.
# Or defined by hex code '#xxxxxx' (hex code must be within ''). User defined colors require
# a terminal that can change color definitions such as Gnome-terminal or rxvt.

# Gradient mode, only hex defined colors are supported
gradient = 1

# Gradient colors for the Electric Dreams theme
# Starting from bottom (low frequencies) to top (high frequencies)
gradient_count = 8
gradient_color_1 = '#9C27B0'   # Deep Purple (bass)
gradient_color_2 = '#BB86FC'   # Light Purple
gradient_color_3 = '#FF006E'   # Hot Magenta
gradient_color_4 = '#E91E63'   # Pink
gradient_color_5 = '#00D9FF'   # Electric Cyan
gradient_color_6 = '#1DE9B6'   # Turquoise
gradient_color_7 = '#00D9FF'   # Electric Cyan (bright)
gradient_color_8 = '#FFFFFF'   # White (peaks)

# Single color mode (if gradient = 0)
foreground = '#00D9FF'

# Background color (requires terminal supporting background change)
background = '#0A0A0F'

[smoothing]
# Percentage value for integral smoothing
integral = 77

# Disables or enables the so-called "Monstercat smoothing"
monstercat = 0

# Set gravity percentage for "drop off"
gravity = 100

# Ignore input below this value
ignore = 0

[eq]
# This one is tricky. You can have as much keys as you want.
# Remember to uncomment more than one key! To set manual eq just remove the ; in front of the keys
# Manual EQ for Electric Dreams - emphasizes mids and highs for visual pop
# Lower frequencies
1 = 1
2 = 1
3 = 1

# Bass frequencies
4 = 1.2
5 = 1.2

# Mid-bass
6 = 1.3
7 = 1.3
8 = 1.3

# Mids (boosted for visual impact)
9 = 1.4
10 = 1.4
11 = 1.4
12 = 1.4

# Upper mids
13 = 1.3
14 = 1.3
15 = 1.3

# Highs (boosted for neon shimmer effect)
16 = 1.5
17 = 1.5
18 = 1.5
19 = 1.5
20 = 1.5
